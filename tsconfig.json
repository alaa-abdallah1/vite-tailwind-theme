{
  "compilerOptions": {
    "rootDir": "./src",
    "baseUrl": "./src",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "declaration": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "include": ["./src/**/*", "./src/**/*.ts", "**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
